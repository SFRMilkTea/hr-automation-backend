create table product_category_entity (
id int8 generated by default as identity,
name varchar(255) not null,
primary key (id));

create table product_entity (
id int8 generated by default as identity,
code varchar(255) not null,
is_ordered boolean not null, 
name varchar(255) not null,
picture_url varchar(255),
quantity int default 1,
product_category_id int8 not null,
primary key (id));

create table question_category_entity (
id int8 generated by default as identity,
name varchar(255) not null,
primary key (id));

create table question_entity (id int8 generated by default as identity,
description varchar(255) not null,
title varchar(255) not null,
question_category_id int8 not null,
primary key (id));

create table user_entity (
id int8 generated by default as identity,
about varchar(255),
auth_code int4 not null,
birth_date timestamp,
code_exp_time timestamp,
email varchar(255) not null,
is_admin boolean not null,
picture_url varchar(255),
post varchar(255),
project varchar(255),
username varchar(255) not null,
primary key (id));

alter table if exists product_entity
add constraint product_category_fk foreign key (product_category_id) references product_category_entity;

alter table if exists
question_entity add constraint question_category_fk foreign key (question_category_id) references question_category_entity;
